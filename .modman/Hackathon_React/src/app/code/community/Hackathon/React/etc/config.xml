<?xml version="1.0"?>
<config>
    <modules>
        <Hackathon_React>
            <version>1.0.0</version>
        </Hackathon_React>
    </modules>
    <global>
        <models>
            <react>
                <class>Hackathon_React_Model</class>
            </react>
        </models>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <react>
                        <class>react/observer</class>
                        <method>renderComponent</method>
                    </react>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <react>
                    <file>react.xml</file>
                </react>
            </updates>
        </layout>
    </frontend>
</config>